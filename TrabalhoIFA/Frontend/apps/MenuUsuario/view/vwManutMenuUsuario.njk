{% extends "templates/base.html" %}

{% block content %}

  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item active">{{ title }}</li>
  </ol>
  <div class="row">
    <div class="col-xl-12">

      <div class="card-header">
        Manutenção de Menu
      </div>

      <div class="card-body">
        <div class="">
          <div style="margin-bottom: 15px;">
            <a href="/menu/insertMenu" class="btn btn-primary">
              Inserir novo menu
            </a>
          </div>

          <div style="background-color: #f8f9fa">
            <table id="tabMenu" class="display" style="width:100%">
              <thead>
                <tr>
                  <th>Ação</th>
                  <th>Código</th>
                  <th>Descrição</th>
                  <th>Menu</th>
                </tr>
              </thead>
              <tbody>
                {% for reg in data %}
                  <tr>
                    <td>
                      {# Link para visualização dos dados #}
                      <a href="/menu/viewMenu/{{ reg.menuid }}" title="Visualizar">
                        <i class="fas fa-search"></i>
                      </a>

                      {# Link para atualização e remoção dos dados #}
                      <a href="/menu/UpdateMenu/{{ reg.menuid }}" title="Atualizar" style="margin-left: 10px;">
                        <i class="fas fa-pencil-alt"></i>
                      </a>
                    </td>
                    <td>{{ reg.codigo }}</td>
                    <td>{{ reg.descricao }}</td>
                    <td>{{ reg.menu_nome }}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>

          </div>

        </div>
      </div>
    </div>
  </div>

  <script>

    window.onload = function () {
      windowOnLoad();
      //@ Caso tenha dado erro no servidor frontEnd, ele será mostrado aqui.
      const localErro = "{{ erro }}";
      if (localErro != "") {
        alert("[vwMenu|onload]Servidor retornou o erro:" + localErro);
      }

      new DataTable('#tabMenu');
    };

  </script>

{% endblock %}
